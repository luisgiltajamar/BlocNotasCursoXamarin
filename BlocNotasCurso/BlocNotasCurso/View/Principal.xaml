<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlocNotasCurso.View.Principal">
  <StackLayout>
    <ListView ItemsSource="{Binding Blocs,Mode=TwoWay}" 
              SelectedItem="{Binding BlocSeleccionado,Mode=TwoWay}">
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell Text="{Binding Nombre}" Detail="{Binding Fecha}" />
      </DataTemplate>
    </ListView.ItemTemplate> 
    </ListView>
  <Button Text="Nuevo" Command="{Binding CmdNuevo}"></Button>
  </StackLayout>
</ContentPage>